# Environment configuration template
# Copy this file to .env and fill in the values

# Database configuration
# For Docker: DATABASE_URL=postgresql://postgres:postgres@postgres:5432/automart
# For external PostgreSQL: DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/automart

# Session secret (change this to a random string)
SESSION_SECRET=change_this_to_a_random_secure_string

# Node environment (development or production)
NODE_ENV=production

# Host configuration
# For Windows, use HOST=127.0.0.1
# For other systems, you can use HOST=0.0.0.0 to bind to all interfaces
HOST=127.0.0.1
PORT=5000

# Set to true to seed the database on first run
SEED_DATABASE=true

# Stripe API keys (required for payment features)
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your_key_here
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_key_here